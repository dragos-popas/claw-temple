{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "api",
        "db",
        "frontend",
        "backend",
        "agents",
        "analytics",
        "worktree",
        "notifications",
        "templates"
      ]
    ]
  }
}